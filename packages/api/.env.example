# ============================================
# BeeCastly API Environment Configuration
# ============================================

# Server
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=beecastly
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Twilio (Voice & SMS)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_FROM_NUMBER=+1...
TWILIO_VOICE_URL=
TWILIO_STATUS_CALLBACK_URL=

# WhatsApp Cloud API
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=
WHATSAPP_API_VERSION=v18.0

# Evolution API (WhatsApp alternative)
EVOLUTION_API_ENABLED=false
EVOLUTION_API_ENDPOINT=
EVOLUTION_API_KEY=
EVOLUTION_API_INSTANCE_NAME=beecastly

# SMS Providers
SMS_DEFAULT_PROVIDER=twilio
MSG91_AUTH_KEY=
MSG91_SENDER_ID=
FAST2SMS_API_KEY=
FAST2SMS_SENDER_ID=
AWS_SNS_ACCESS_KEY_ID=
AWS_SNS_SECRET_ACCESS_KEY=
AWS_SNS_REGION=us-east-1

# Email
EMAIL_DEFAULT_PROVIDER=smtp
EMAIL_FROM=noreply@beecastly.com
EMAIL_FROM_NAME=BeeCastly
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Stripe
STRIPE_SECRET_KEY=sk_...
STRIPE_PUBLISHABLE_KEY=pk_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Razorpay
RAZORPAY_KEY_ID=rzp_...
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Storage
STORAGE_TYPE=local
LOCAL_UPLOAD_DIR=./uploads
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
