{
  "name": "beecastly",
  "version": "1.0.0",
  "description": "AI-Powered Omnichannel Sales & Marketing Automation Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:worker\"",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:worker": "npm run dev:worker --workspace=packages/api",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=packages/api && npm run build --workspace=packages/web",
    "build:api": "npm run build --workspace=packages/shared && npm run build --workspace=packages/api",
    "build:web": "npm run build --workspace=packages/shared && npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/api",
    "start:web": "npm run start --workspace=packages/web",
    "start:worker": "npm run start:worker --workspace=packages/api",
    "test": "npm run test --workspace=packages/api && npm run test --workspace=packages/web",
    "test:api": "npm run test --workspace=packages/api",
    "test:web": "npm run test --workspace=packages/web",
    "test:coverage": "npm run test:coverage --workspace=packages/api",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "typecheck": "npm run typecheck --workspace=packages/api && npm run typecheck --workspace=packages/web",
    "db:migrate": "npm run db:migrate --workspace=packages/api",
    "db:seed": "npm run db:seed --workspace=packages/api",
    "db:reset": "npm run db:reset --workspace=packages/api",
    "db:health": "npm run db:health --workspace=packages/api",
    "redis:health": "npm run redis:health --workspace=packages/api",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "clean": "rm -rf packages/*/dist packages/*/.next packages/*/node_modules node_modules",
    "clean:all": "npm run clean && rm -rf docker/postgres_data docker/redis_data",
    "postinstall": "npm run build --workspace=packages/shared"
  },
  "keywords": [
    "saas",
    "marketing-automation",
    "crm",
    "whatsapp",
    "sms",
    "email",
    "ai",
    "workflow",
    "multitenant"
  ],
  "author": "BeeCastly Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/beecastly.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/beecastly/issues"
  },
  "homepage": "https://beecastly.com",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
